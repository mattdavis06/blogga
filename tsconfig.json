{
	"compilerOptions": {
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"incremental": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"plugins": [
			{
				"name": "next"
			}
		]
	},
	"include": [
		"next-env.d.ts",
		".next/types/**/*.ts",
		"**/*.ts",
		"**/*.tsx",
		"app/layout.tsx",
		"app/components/shared/BlogArticleCard.tsx",
		"app/about/page.tsx",
		"app/components/layout/BlogsYearsHeader.tsx",
		"app/blogs/page.tsx",
		"app/components/shared/BlogsCard.tsx"
	],
	"exclude": ["node_modules"]
}
